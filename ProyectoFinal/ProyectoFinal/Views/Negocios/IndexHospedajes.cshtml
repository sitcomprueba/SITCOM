                        <input type="button" value="VER" class="btn btn-default" onclick="window.location='@Url.Action("VerHospedaje", new { id=item.idNegocio })';" />
                    </div>*@

                                }
                            }
                            else
                            {
                                @Html.Label("NO HAY HOSPEDAJES PUBLICADOS.")
                            }

